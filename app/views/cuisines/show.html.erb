<div>
  <h1>Cozinha: <%= @cuisine.name %></h1>

  <% if @cuisine.recipes.empty? %>
    Nenhuma receita encontrada para este tipo de cozinha
  <% end %>

  <% @cuisine.recipes.each do |recipe| %>
    <%= render recipe %>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to 'Editar', edit_cuisine_path(@cuisine) %>
<% end %>

<%= link_to 'Voltar', root_path %>
